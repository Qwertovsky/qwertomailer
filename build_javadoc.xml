<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="javadoc" name="javadoc">
	<target name="config">
        <property file="build.properties"/>
		<path id="libPath">
			<pathelement path="${log4j-jar}"/>
			<pathelement path="${javamail-jar}"/>
			<pathelement path="${slf4j-api-jar}"/>
			<pathelement path="${slf4j-log4j-jar}"/>
			<pathelement path="${commons-cli-jar}"/>
			<pathelement path="${junit-jar}"/>
		</path>
    </target>
    <target name="javadoc" depends="config">
        <javadoc access="public" 
			author="true"
			classpathref="libPath"
			destdir="doc"
			nodeprecated="false"
			nodeprecatedlist="false"
			noindex="false"
			nonavbar="false"
			notree="false"
			source="1.6"
			sourcepath ="src"
			
			splitindex="true"
			use="true"
			version="true"/>
    </target>
</project>
